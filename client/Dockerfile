FROM node:18-alpine as builder

ARG VITE_CLERK_PUBLIC_KEY
ARG VITE_AZURE_STORAGE_CONNECTION_STRING
ARG VITE_SOCKET_URL
ARG VITE_VIDEO_SERVICE_URL
ARG VITE_USER_SERVICE_URL
ARG VITE_VIDEO_SERVICE_PORT
ARG VITE_VIDEO_SHARE_BASE_URL

WORKDIR /src
COPY package*.json ./
RUN npm ci
COPY . .

# Pass build arguments to Vite
ENV VITE_CLERK_PUBLIC_KEY=${VITE_CLERK_PUBLIC_KEY}
ENV VITE_AZURE_STORAGE_CONNECTION_STRING=${VITE_AZURE_STORAGE_CONNECTION_STRING}
ENV VITE_SOCKET_URL=${VITE_SOCKET_URL}
ENV VITE_VIDEO_SERVICE_URL=${VITE_VIDEO_SERVICE_URL}
ENV VITE_USER_SERVICE_URL=${VITE_USER_SERVICE_URL}
ENV VITE_VIDEO_SERVICE_PORT=${VITE_VIDEO_SERVICE_PORT}
ENV VITE_VIDEO_SHARE_BASE_URL=${VITE_VIDEO_SHARE_BASE_URL}

RUN npm run build

FROM nginx:alpine
COPY --from=builder /src/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]